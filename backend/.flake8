[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    alembic,
    build,
    dist,
    .eggs,
    *.egg,
    .tox,
    .coverage,
    htmlcov,
    .pytest_cache,
    .mypy_cache

# Error codes to ignore
ignore = 
    # Line too long (handled by black)
    E501,
    # Line break before binary operator (handled by black)
    W503,
    # Line break after binary operator (conflicts with W503)
    W504,

# Error codes to enable
select = 
    E,
    W,
    F,
    C,
    N

# Complexity
max-complexity = 12

# Import order
import-order-style = google
application-import-names = app
application-package-names = app

per-file-ignores =
    # Tests can have longer lines and more complex functions
    tests/*: E501, C901
    # Migrations and alembic files can be messy
    migrations/*: E501, F401, F841
    alembic/*: E501, F401, F841
    # __init__.py files can have unused imports
    __init__.py: F401