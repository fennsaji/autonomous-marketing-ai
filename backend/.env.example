# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/defeah_marketing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/defeah_marketing_test

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Instagram/Facebook App
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
REQUESTS_PER_MINUTE=60
MAX_POSTS_PER_DAY=50

# File Upload
MEDIA_UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10485760

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
DEBUG=true